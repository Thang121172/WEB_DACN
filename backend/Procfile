# backend/Procfile

# Tiến trình Web chính (Gunicorn) - GIỮ NGUYÊN (Đúng)
web: gunicorn core.wsgi:application --bind 0.0.0.0:$PORT

# Tiến trình Celery Worker (Task bất đồng bộ)
# SỬA: Trỏ thẳng đến module `core.celery_app`
worker: celery -A core.celery_app worker -l info

# Tiến trình Celery Beat (Lập lịch tác vụ)
# SỬA: Trỏ thẳng đến module `core.celery_app`
beat: celery -A core.celery_app beat -l info --scheduler django_celery_beat.schedulers:DatabaseScheduler